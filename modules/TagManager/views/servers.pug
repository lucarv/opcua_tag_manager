extends layout

block content                        
        .panel.panel-default
            .panel-heading SUBSCRIBED ENDPOINTS  
            .panel-body    
                form(action='/', method='post', id='list')
                  fieldset
                    .row
                      .col-md-12
                        select.browser-default.custom-select#id(name='id' width='130')
                          each endpoint in endpoints
                            option(value=endpoint.id) #{endpoint.url}
            .panel-heading
            .panel-body                              
                    .row                        
                      .col-md-12
                        button.btn.btn-default.btn-space(type='submit', form='list' formaction='/list')  list tags
                        button.btn.btn-danger.btn-space(type='submit', form='list' formaction='/delete')  remove server
                        button.btn.btn-danger.btn-space(type='submit', form='list' formaction='/purge')  purge
                    
